/* pages/fri_list/fri_list.wxss */
.fri_list_page {padding-bottom:180rpx;}
.fri_list_page .describe{margin:62rpx 30rpx;border:1rpx solid #029cf6;border-radius:16rpx;box-shadow:0px 16rpx 16rpx #ccdfec;}
.fri_list_page .describe .txt_b{display:block;width:200rpx;height:46rpx;background:linear-gradient(to bottom , #00a9fe , #0a65d3);border-radius:46rpx;line-height:46rpx;text-align:center;color:#fff;font-size:30rpx;margin:-23rpx auto 0rpx;}
.fri_list_page .describe .txt_p{display:block;font-size:28rpx;line-height:46rpx;padding:32rpx 36rpx;}

.fri_list_page .list{border-top:8rpx solid #f3f3f3;padding:0 30rpx;}
.fri_list_page .list .li{display:-webkit-box;padding:32rpx 9rpx;border-bottom:1rpx dashed #b0b0b0;-webkit-box-align:center;}
.fri_list_page .list .li image{display:block;width:88rpx;height:88rpx;border:1rpx solid #c98b28;border-radius:90rpx;}
.fri_list_page .list .li .msg{display:block;-webkit-box-flex:1;width:100%;padding-left:20rpx;}
.fri_list_page .list .li .msg .txt_b{display:block;font-size:28rpx;line-height:28rpx;width:100%;}
.fri_list_page .list .li .msg .txt_sp{display:block;font-size:24rpx;line-height:24rpx;padding-top:14rpx;color:#ff3c00}
.fri_list_page .list .li .btn{display:block;width:125rpx;height:46rpx;line-height:46rpx;text-align:center;border-radius:46rpx;background-color:#ff3c00;color:#fff;font-size:24rpx;}

.fri_list_page .add_fri{display:block;padding:0rpx;margin:0rpx auto;width:690rpx;height:110rpx;line-height:110rpx;border-radius:110rpx;font-weight:normal;font-size:40rpx;background:linear-gradient(to bottom , #00a8fe , #0a66d3);color:#fff;position:fixed;left:30rpx;bottom:40rpx;box-shadow:0px 16rpx 16rpx #ccdfec;}